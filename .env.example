# FILE BARU: .env.example
# Ganti semua nilai di bawah ini dengan kredensial Anda sendiri.
# JANGAN PERNAH unggah file .env yang berisi nilai rahasia ke GitHub.

# Kredensial Google Cloud OAuth 2.0
GOOGLE_CLIENT_ID="YourGoogleClientID.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="YourGoogleClientSecret"
GOOGLE_REFRESH_TOKEN="YourGoogleRefreshToken"

# Konfigurasi Aplikasi Zee-Index
NEXT_PUBLIC_ROOT_FOLDER_ID="ID_FOLDER_UTAMA_GOOGLE_DRIVE_ANDA"
NEXT_PUBLIC_ROOT_FOLDER_NAME="Beranda"
ADMIN_EMAILS="email.admin1@gmail.com,email.admin2@gmail.com"

# Konfigurasi NextAuth.js (Gunakan `openssl rand -hex 32` untuk menghasilkan secret baru)
NEXTAUTH_SECRET="GenerateANewSecretHere"
NEXTAUTH_URL="http://localhost:3000" # Ganti dengan URL produksi saat deployment

# Kunci Rahasia untuk Tanda Tangan Digital (Gunakan `openssl rand -hex 16` untuk menghasilkan kunci baru)
SHARE_SECRET_KEY="GenerateANewSecretHere"

# (Opsional) Konfigurasi Folder
PRIVATE_FOLDER_IDS="ID_FOLDER_PRIVAT_1,ID_FOLDER_PRIVAT_2"
PROTECTED_FOLDERS_JSON='{"ID_FOLDER_TERKUNCI_1":{"id":"user1","password":"pass1"}}'

# Kredensial Vercel KV (Redis)
KV_URL="rediss://..."
KV_REST_API_URL="https://..."
KV_REST_API_TOKEN="Acyj..."
KV_REST_API_READ_ONLY_TOKEN="Asyj..."

# (Opsional) Kredensial SMTP untuk mengirim email
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""
# EMAIL_FROM='"Zee Index" <no-reply@yourdomain.com>'

# (Opsional) Kunci Rahasia untuk Cron Job Vercel
# CRON_SECRET="GenerateANewSecretHere"